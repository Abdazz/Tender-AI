# Database Configuration
DATABASE_URL=postgresql://tenderai:tenderai_pass@localhost:5432/tenderai_bf
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tenderai_bf
DATABASE_USER=tenderai
DATABASE_PASSWORD=tenderai_pass

# MinIO (S3-Compatible Storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=tenderai-bf
MINIO_SECURE=false

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yulcom.com
EMAIL_FROM_NAME=TenderAI BF
EMAIL_TO=tender-watch@yulcom.com
EMAIL_REPLY_TO=support@yulcom.com

# LLM Provider Configuration (choose one)
# Groq (recommended for speed)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI (alternative)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Provider selection: groq, openai
LLM_PROVIDER=groq

# Application Settings
APP_NAME=TenderAI BF
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_PASSWORD=change-me-in-production

# JWT Authentication (for FastAPI)
TENDERAI_JWT_SECRET=change-this-secret-key-in-production-use-openssl-rand-hex-32
TENDERAI_ADMIN_USERNAME=admin
TENDERAI_ADMIN_PASSWORD=admin123

# Timezone
TIMEZONE=Africa/Ouagadougou

# Scheduler Configuration
CRON_SCHEDULE=0 7 * * *
ENABLE_SCHEDULER=true

# Rate Limiting (requests per minute)
DEFAULT_RATE_LIMIT=10
RATE_LIMIT_ARCOP=6
RATE_LIMIT_DGCMEF=6

# OCR Configuration
OCR_ENABLED=true
OCR_LANGUAGE=fra
OCR_TIMEOUT=300
TESSERACT_PATH=/usr/bin/tesseract

# Document Processing
PDF_TIMEOUT=120
MAX_FILE_SIZE_MB=50
DOCX_TEMPLATE_PATH=templates/report_template.dotx

# Monitoring & Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=30

# Storage Paths
REPORTS_PATH=reports
SNAPSHOTS_PATH=snapshots
LOGS_PATH=logs
TEMP_PATH=temp

# Docker Compose Services
POSTGRES_HOST=postgres
MINIO_HOST=minio
API_HOST=api
UI_HOST=ui
WORKER_HOST=worker

# Network Configuration
API_PORT=8000
UI_PORT=7860
POSTGRES_PORT=5432
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Development/Testing
TEST_DATABASE_URL=postgresql://tenderai:tenderai_pass@localhost:5432/tenderai_bf_test
MOCK_SOURCES=false
DRY_RUN=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Content filtering
MIN_RELEVANCE_SCORE=0.7
MAX_ITEMS_PER_RUN=100
DEDUPLICATION_THRESHOLD=0.85
# Deduplication method: hash_only, similarity_only, hash_similarity, llm_only, hybrid
DEDUPLICATION_METHOD=hash_similarity

