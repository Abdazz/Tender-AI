# Use Python 3.11 slim base image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    HF_HOME=/app/cache/huggingface \
    TRANSFORMERS_CACHE=/app/cache/huggingface \
    TORCH_HOME=/app/cache/torch \
    EASYOCR_MODULE_PATH=/app/cache/easyocr

# Install system dependencies (including those needed for Docling)
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    libc6-dev \
    libpq-dev \
    libgomp1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1 \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r tenderai && useradd -r -g tenderai tenderai

# Create home directory for tenderai user
RUN mkdir -p /home/tenderai && chown -R tenderai:tenderai /home/tenderai

# Set work directory
WORKDIR /app

# Install Poetry
RUN pip install poetry==1.8.3

# Configure Poetry
ENV POETRY_NO_INTERACTION=1 \
    POETRY_VIRTUALENVS_CREATE=false \
    POETRY_CACHE_DIR=/tmp/poetry_cache

# Copy dependency files
COPY pyproject.toml poetry.lock* README.md ./

# Install dependencies
RUN poetry install --only=main --no-root && rm -rf $POETRY_CACHE_DIR

# Copy application code
COPY src/ src/
COPY alembic/ alembic/
COPY alembic.ini ./

# Install the package itself in editable mode
RUN pip install -e .

# Fix permissions for GLM models directory (required by deepsearch_glm)
RUN mkdir -p /usr/local/lib/python3.11/site-packages/deepsearch_glm/resources/models/crf/part-of-speech && \
    chmod -R 777 /usr/local/lib/python3.11/site-packages/deepsearch_glm/resources || true

# Fix permissions for rapidocr models directory (required by Docling OCR)
RUN chmod -R 777 /usr/local/lib/python3.11/site-packages/rapidocr || true

# Create necessary directories with proper permissions
RUN mkdir -p logs cache temp reports \
    cache/huggingface cache/torch cache/easyocr && \
    chmod -R 777 logs cache temp reports && \
    chown -R tenderai:tenderai /app

# Switch to non-root user
USER tenderai

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Run FastAPI with uvicorn
CMD ["uvicorn", "tenderai_bf.api.main:app", "--host", "0.0.0.0", "--port", "8000"]